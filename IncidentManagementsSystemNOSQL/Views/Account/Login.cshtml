@model IncidentManagementsSystemNOSQL.Models.LoginViewModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Incident Management System – The Garden Group</title>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <style>
        .error-message {
            background: rgba(255, 77, 77, 0.15);
            color: #b00020;
            border: 1px solid rgba(255, 77, 77, 0.4);
            border-radius: 8px;
            padding: 0.75rem 1rem;
            margin-bottom: 1rem;
            font-weight: 500;
            text-align: center;
            animation: fadeIn 0.3s ease;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-4px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .password-wrapper {
            position: relative;
            width: 100%;
        }

            .password-wrapper .field {
                width: 100%;
                padding-right: 2.5rem;
            }

        .password-toggle {
            position: absolute;
            right: 0.6rem;
            top: 50%;
            transform: translateY(-50%);
            border: none;
            background: transparent;
            cursor: pointer;
            padding: 0;
            font-size: 1.1rem;
        }
    </style>
</head>
<body>
    <div class="wrap">
        <div class="card">
            <div class="brand">
                <img src="~/Images/flower.png" asp-append-version="true" alt="The Garden Group" class="logo" />
                <div class="company">The Garden Group</div>
                <div class="system-badge">Incident Management System</div>
                <h1>Login</h1>
            </div>

            <form asp-action="Login" method="post" novalidate>
                @Html.AntiForgeryToken()

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="error-message">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p>@error.ErrorMessage</p>
                        }
                    </div>
                }

                <label asp-for="Username">Username</label>
                <input asp-for="Username" class="field" autocomplete="username" placeholder="Enter username" />

                <label asp-for="Password">Password</label>
                <div class="password-wrapper">
                    <input asp-for="Password" class="field" type="password" autocomplete="current-password" />
                    <button type="button" id="togglePassword" class="password-toggle" aria-label="Show password">👁</button>
                </div>

                <input type="hidden" asp-for="ReturnUrl" />

                <button class="btn" type="submit">Login</button>

                <div class="links">
                    <a asp-controller="Account" asp-action="ForgotPassword">Forget password</a>
                    <a asp-controller="Account" asp-action="SetPassword">Set password</a>
                </div>
            </form>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const passwordInput = document.getElementById("Password");
            const toggleBtn = document.getElementById("togglePassword");

            toggleBtn.addEventListener("click", function () {
                const isPassword = passwordInput.type === "password";
                passwordInput.type = isPassword ? "text" : "password";
                this.textContent = isPassword ? "🙈" : "👁";
                this.setAttribute("aria-label", isPassword ? "Hide password" : "Show password");
            });
        });
    </script>
</body>
</html>
