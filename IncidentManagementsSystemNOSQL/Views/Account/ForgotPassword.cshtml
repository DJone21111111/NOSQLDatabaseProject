@model IncidentManagementsSystemNOSQL.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}
<form asp-action="ForgotPassword" method="post">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label class="form-label">Username</label>
        <input asp-for="Username" class="form-control" autocomplete="username" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary w-100">Send reset link</button>
</form>
<p class="mt-2"><a asp-controller="Account" asp-action="Login">Back to Login</a></p>
