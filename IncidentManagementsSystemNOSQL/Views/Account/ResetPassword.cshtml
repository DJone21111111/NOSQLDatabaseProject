@model IncidentManagementsSystemNOSQL.Models.ResetPasswordViewModel
@{
    Layout = null;
    ViewData["Title"] = "Set Your Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Set Password - The Garden Group</title>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <style>
        .error-message {
            background: rgba(255, 77, 77, 0.15);
            color: #b00020;
            border: 1px solid rgba(255, 77, 77, 0.4);
            border-radius: 8px;
            padding: .75rem 1rem;
            margin-bottom: 1rem;
            font-weight: 500;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="wrap">
        <div class="card">
            <div class="brand">
                <img src="~/Images/flower.png" asp-append-version="true" alt="The Garden Group" class="logo" />
                <div class="company">The Garden Group</div>
                <div class="system-badge">Incident Management System</div>
                <h1>Set Your Password</h1>
                <p style="font-size:.9rem;color:#555;margin-top:.25rem;">
                    Enter your new password and confirm it to continue.
                </p>
            </div>

            <form asp-action="ResetPassword" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="Token" />

                @if (!ViewData.ModelState.IsValid && ViewData.ModelState.Values.SelectMany(v => v.Errors).Any())
                {
                    <div class="error-message">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                }

                <label asp-for="NewPassword">New Password</label>
                <input asp-for="NewPassword" class="field" type="password" autocomplete="new-password" minlength="6" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>

                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="field" type="password" autocomplete="new-password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                <button type="submit" class="btn">Set Password</button>

                <div class="links">
                    <a asp-controller="Account" asp-action="Login">Back to Login</a>
                </div>
            </form>
        </div>
    </div>

    <partial name="_ValidationScriptsPartial" />
</body>
</html>
