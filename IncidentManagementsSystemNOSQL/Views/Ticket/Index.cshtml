@{
    <form method="get" class="mb-3">
        <label for="priority">Priority:</label>
        <select id="priority" name="priority" onchange="this.form.submit()">
            <option value="">All</option>
            <option value="Critical" selected="@(ViewBag.Priority == "Critical")">Critical</option>
            <option value="High" selected="@(ViewBag.Priority == "High")">High</option>
            <option value="Normal" selected="@(ViewBag.Priority == "Normal")">Normal</option>
            <option value="Low" selected="@(ViewBag.Priority == "Low")">Low</option>
        </select>
        <noscript><button type="submit">Apply</button></noscript>
    </form>

}
