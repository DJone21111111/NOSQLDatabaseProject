@model IncidentManagementsSystemNOSQL.Models.UserFormViewModel

@{
    ViewData["Title"] = "Remove User";
}

<div class="container-fluid px-4 py-3">
    <div class="delete-header">
        <div>
            <h1 class="mb-1">‚ö†Ô∏è Confirm Removal</h1>
            <p class="mb-0 text-muted">Review the account details carefully before removing access.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary btn-pill">Cancel</a>
    </div>

    <div class="row g-4">
        <div class="col-xl-8">
            <div class="delete-card">
                <div class="alert alert-danger" role="alert">
                    Deletion immediately revokes access and removes the account from the directory. This action cannot be undone.
                </div>

                <div class="delete-card__section">
                    <h5 class="section-title">üë§ Account Summary</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <span class="label">Employee ID</span>
                            <p class="value">@Model.EmployeeId</p>
                        </div>
                        <div class="col-md-6">
                            <span class="label">Username</span>
                            <p class="value">@Model.UserName</p>
                        </div>
                        <div class="col-md-6">
                            <span class="label">Full Name</span>
                            <p class="value">@Model.Name</p>
                        </div>
                        <div class="col-md-6">
                            <span class="label">Work Email</span>
                            <p class="value">@Model.Email</p>
                        </div>
                    </div>
                </div>

                <div class="delete-card__section">
                    <h5 class="section-title">üè¢ Department & Role</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <span class="label">Department Name</span>
                            <p class="value">@Model.DepartmentName</p>
                        </div>
                        <div class="col-md-6">
                            <span class="label">Role</span>
                            <span class="badge role-badge">@Model.Role</span>
                        </div>
                    </div>
                </div>

                <div class="delete-card__section">
                    <h5 class="section-title">üîê Status Checks</h5>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="status-chip @(Model.IsActive ? "status-chip--active" : "status-chip--inactive")">
                                <span>Account Status:</span>
                                <strong>@(Model.IsActive ? "Active" : "Inactive")</strong>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="status-chip @(Model.MustChangePassword ? "status-chip--warning" : "status-chip--stable")">
                                <span>Password Reset:</span>
                                <strong>@(Model.MustChangePassword ? "Required" : "Not required")</strong>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="status-chip status-chip--stable">
                                <span>Last Updated:</span>
                                <strong>@(Model.LastUpdatedDisplay ?? "Just now")</strong>
                            </div>
                        </div>
                    </div>
                </div>

                <form asp-action="Delete" method="post" class="mt-4">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger btn-pill">Yes, remove this account</button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-pill ms-2">Go back to profile</a>
                </form>
            </div>
        </div>

        <div class="col-xl-4">
            <div class="summary-card">
                <h5 class="mb-3">üõ°Ô∏è Checklist</h5>
                <ul class="list-unstyled mb-0">
                    <li>‚Ä¢ Confirm hardware/software assets are recovered.</li>
                    <li>‚Ä¢ Update on-call schedules and escalation trees.</li>
                    <li>‚Ä¢ Archive relevant communications and tickets.</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<style>
    .delete-header {
        background: #111111;
        color: #f7f7f7;
        padding: 1.75rem 2rem;
        border-radius: 12px;
        box-shadow: 0 18px 40px rgba(0,0,0,0.45);
        margin-bottom: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
    }

    .delete-card {
        background: #121212;
        border-radius: 16px;
        box-shadow: 0 25px 55px rgba(0,0,0,0.55);
        padding: 1.75rem;
        color: #f4f4f4;
    }

    .delete-card__section + .delete-card__section {
        margin-top: 1.75rem;
        padding-top: 1.75rem;
        border-top: 1px solid #1f1f1f;
    }

    .section-title {
        font-weight: 600;
        margin-bottom: 1.25rem;
    }

    .label {
        display: block;
        font-size: .8rem;
        letter-spacing: .04em;
        text-transform: uppercase;
        color: #9c9c9c;
        margin-bottom: .35rem;
    }

    .value {
        font-size: 1.05rem;
        font-weight: 500;
        color: #f0f0f0;
    }

    .role-badge {
        background: linear-gradient(135deg, #232323 0%, #2f2f2f 100%);
        color: #ededed;
        border-radius: 999px;
        padding: .45rem 1.2rem;
        font-weight: 600;
    }

    .status-chip {
        background: #181818;
        border-radius: 12px;
        padding: 1rem 1.1rem;
        border: 1px solid #252525;
        display: flex;
        flex-direction: column;
        gap: .25rem;
        font-size: .9rem;
        color: #dddddd;
    }

    .status-chip strong {
        font-size: 1.05rem;
        color: inherit;
    }

    .status-chip--active {
        border-color: #2c8859;
        box-shadow: 0 0 0 1px rgba(44,136,89,0.3);
    }

    .status-chip--inactive {
        border-color: #a14646;
        box-shadow: 0 0 0 1px rgba(161,70,70,0.3);
    }

    .status-chip--warning {
        border-color: #d49a3a;
        box-shadow: 0 0 0 1px rgba(212,154,58,0.35);
    }

    .status-chip--stable {
        border-color: #2f2f2f;
    }

    .summary-card {
        background: #161616;
        border-radius: 16px;
        box-shadow: 0 18px 38px rgba(0,0,0,0.5);
        padding: 1.75rem;
        color: #f5f5f5;
    }

    .btn-pill {
        border-radius: 999px;
        padding: 0.6rem 1.4rem;
    }

    .alert-danger {
        background-color: rgba(220, 53, 69, 0.08);
        border-color: rgba(220, 53, 69, 0.4);
        color: #ffb3b3;
    }
</style>
