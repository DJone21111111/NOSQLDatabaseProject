@model IncidentManagementsSystemNOSQL.Models.UserFormViewModel

@{
    ViewData["Title"] = "Edit Team Member";
    var roleOptions = ViewBag.RoleOptions as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem> ?? new();
}

<div class="container-fluid px-4 py-3">
    <div class="user-form-header">
        <div>
            <h1 class="mb-1">‚úèÔ∏è Update Account</h1>
            <p class="mb-0 text-muted">Modify profile details, security settings, and departmental assignment.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary btn-pill">‚Üê Back to Directory</a>
    </div>

    <form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="user-form needs-validation" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div class="row g-4">
            <div class="col-xl-8">
                <div class="form-card">
                    <div class="form-card__section">
                        <h5 class="section-title">üë§ Personal Information</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="EmployeeId" class="form-label">Employee ID *</label>
                                <input asp-for="EmployeeId" class="form-control" />
                                <span asp-validation-for="EmployeeId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="UserName" class="form-label">Username *</label>
                                <input asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label">Full Name *</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">Work Email *</label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-card__section">
                        <h5 class="section-title">üè¢ Department Details</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="DepartmentName" class="form-label">Department Name *</label>
                                <input asp-for="DepartmentName" class="form-control" />
                                <span asp-validation-for="DepartmentName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Role" class="form-label">Role *</label>
                                <select asp-for="Role" asp-items="roleOptions" class="form-select"></select>
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="DepartmentDescription" class="form-label">Department Description</label>
                                <textarea asp-for="DepartmentDescription" class="form-control" rows="2"></textarea>
                                <span asp-validation-for="DepartmentDescription" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-card__section">
                        <h5 class="section-title">üîê Security & Access</h5>
                        <div class="alert alert-secondary small" role="alert">
                            Leave the password fields blank to keep the existing password. Toggle the switches to control access requirements.
                        </div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Password" class="form-label">New Password</label>
                                <input asp-for="Password" class="form-control" placeholder="Leave blank to keep current" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Repeat new password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row g-3 mt-2">
                            <div class="col-md-4">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" asp-for="IsActive" />
                                    <label class="form-check-label" asp-for="IsActive">Account Active</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" asp-for="MustChangePassword" />
                                    <label class="form-check-label" asp-for="MustChangePassword">Require password change on next login</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-4">
                <div class="summary-card">
                    <h5 class="mb-3">üõ†Ô∏è Actions</h5>
                    <ul class="list-unstyled mb-0">
                        <li>‚Ä¢ Update access when employees change teams.</li>
                        <li>‚Ä¢ Reset passwords after security reviews.</li>
                        <li>‚Ä¢ Deactivate accounts for departures.</li>
                    </ul>
                    <div class="mt-4 d-flex flex-column gap-2">
                        <button type="submit" class="btn btn-dark-gradient">Save Changes</button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-pill">View Profile</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .user-form-header {
        background: #121212;
        color: #f5f5f5;
        padding: 1.75rem 2rem;
        border-radius: 12px;
        box-shadow: 0 18px 40px rgba(0,0,0,0.45);
        margin-bottom: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
    }

    .btn-pill {
        border-radius: 999px;
        padding: 0.6rem 1.4rem;
    }

    .user-form .form-control,
    .user-form .form-select {
        background: #181818;
        border: 1px solid #272727;
        color: #f3f3f3;
    }

    .user-form .form-control:focus,
    .user-form .form-select:focus {
        border-color: #3a3a3a;
        box-shadow: none;
    }

    .user-form .form-check-input {
        background-color: #181818;
        border-color: #272727;
    }

    .user-form .form-check-input:checked {
        background-color: #3f8cff;
        border-color: #3f8cff;
    }

    .form-card {
        background: #121212;
        border-radius: 16px;
        box-shadow: 0 25px 50px rgba(0,0,0,0.55);
        padding: 1.75rem;
        color: #f3f3f3;
    }

    .form-card__section + .form-card__section {
        margin-top: 1.75rem;
        padding-top: 1.75rem;
        border-top: 1px solid #1f1f1f;
    }

    .section-title {
        font-weight: 600;
        margin-bottom: 1.25rem;
    }

    .summary-card {
        background: #161616;
        border-radius: 16px;
        box-shadow: 0 18px 38px rgba(0,0,0,0.5);
        padding: 1.75rem;
        color: #f5f5f5;
    }

    .btn-dark-gradient {
        background: linear-gradient(135deg, #111111 0%, #232323 100%);
        border: 1px solid #2d2d2d;
        color: #ffffff;
        font-weight: 600;
        padding: .6rem 1.6rem;
        border-radius: 999px;
        transition: transform .2s ease, box-shadow .2s ease;
    }

    .btn-dark-gradient:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 24px rgba(0,0,0,0.45);
        color: #ffffff;
    }

    .alert-secondary {
        background-color: rgba(255,255,255,0.05);
        border-color: #303030;
        color: #dcdcdc;
    }
</style>
